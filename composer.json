{
    "name": "hellofromsteve/paystack",
    "description": "A Laravel package for Paystack payment integration",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Stephen Asare",
            "email": "direct2stephen@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^11.0",
        "illuminate/http": "^11.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "HelloFromSteve\\Paystack\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "HelloFromSteve\\Paystack\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "HelloFromSteve\\Paystack\\PaystackServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}

